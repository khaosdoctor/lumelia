{
	"fmt": {
		"options": {
			"semiColons": false,
			"singleQuote": true,
			"useTabs": true,
			"lineWidth": 120,
			"indentWidth": 2
		}
	},
	"tasks": {
		"run": "deno run --unstable --watch -A ./src/dev.ts",
		"format": "deno fmt ./src --watch"
	},
	"lock": true,
	"compilerOptions": {
		"types": [
			"./src/index.d.ts"
		]
	}
}
